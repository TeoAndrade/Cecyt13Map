<!--barra de busqueda-->
<div class="container h-100">
    <div class="d-flex justify-content-end h-100">
        <div class="searchbar">
            <input class="search_input text-dark awesomplete" type="text" placeholder="Buscar..." id="txtBuscar" data-list="@esc" data-minChars="1">
            <a href="#" class="search_icon"><i class="fas fa-search"></i></a>
        </div>
    </div>
</div>

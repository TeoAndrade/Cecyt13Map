<div class="container h-100">
    <div class="d-flex justify-content-end h-100">
        <div class="searchbar">
            <input class="search_input text-dark" type="text" name="" placeholder="Search..." id="txtBuscar">
            <a href="#" class="search_icon"><i class="fas fa-search"></i></a>
        </div>
    </div>
</div>
<br>
<div class="card">
    <article class="card-body section d-flex justify-content-center align-middle">
        <img src="~/Content/img/Mapa oficial (4).png" usemap="#Escuela" />
        <map name="Escuela">
            <area shape="rect" coords="179,691,600,792" href="@Url.Action("Index","Home")" target="_parent" alt="Edificio Norte" />
            <area shape="rect" coords="329,828,560,894" href="@Url.Action("Index","Home")" target="_parent" alt="Edificio Central" />
            <area shape="rect" coords="200,1087,407,1139" href="@Url.Action("Index","Home")" target="_parent" alt="Edificio Poniente" />
            <area shape="rect" coords="463,527,601,585" href="@Url.Action("Index","Home")" target="_parent" alt="Edificio Poniente" />
            <area shape="rect" coords="57,640,136,832" href="@Url.Action("Index","Home")" target="_parent" alt="Edificio Norponiente" />
            <area shape="rect" coords="451,1087,603,1210" href="@Url.Action("Index","Home")" target="_parent" alt="Edificio Norponiente" />
            <area shape="rect" coords="130,128,522,519" href="@Url.Action("Index","Home")" target="_parent" alt="Edificio Norponiente" />
            <area shape="rect" coords="192,612,560,666" href="@Url.Action("Index","Home")" target="_parent" alt="Edificio Norponiente" />
            <area shape="rect" coords="326,960,595,1024" href="@Url.Action("Index","Home")" target="_parent" alt="Edificio Sur" />
            <area shape="rect" coords="59,924,160,1027" href="@Url.Action("Index","Home")" target="_parent" alt="Gestion Escolar" />
        </map>
    </article>
</div>



@section scripts{
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    
    <script type="text/javascript" src="//jqueryui.com/wp-includes/js/comment-reply.min.js?ver=4.5.2"></script>
    <script type="text/javascript" src="//jqueryui.com/wp-includes/js/wp-embed.min.js?ver=4.5.2"></script>
    <script>
    $(document).ready(function () {
        $("#txtBuscar").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "@Url.Action("Buscar", "Home")?buscar=" + request.term,
                    dataType: "json",
                    success: function (data) {
                        response(data);
                    }
                });
            }


        });
    });
    </script>
}


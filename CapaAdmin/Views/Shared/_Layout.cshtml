<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/sweetalert.css")
    @RenderSection("styles", required: false)
    <script src="~/Content/js/main.js"></script>
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
<!--cabecera de la pagina -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">
                <img src="~/Content/img/Logo2.png" alt="">
                <span class="d-none d-lg-block">Administrador</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->
        <a class="dropdown-item d-flex align-items-center justify-content-end" href="@Url.Action("CerrarSesion","Acceso")">
            <i class="bi bi-box-arrow-right"></i>
            <span class="m-2">Cerrar sesion</span>
        </a>
    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <!-- menu de la pagina-->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item active" style="margin-right:30px"><a href="@Url.Action("Admin","Admin")" class="nav-link collapse"><i class="fas fa-users me-1" style="color:black"></i><span class="m-2" style="color:black">Administradores</span></a></li>

            <li class="nav-item active" style="margin-right:30px"><a href="@Url.Action("Salones","Admin")" class="nav-link collapse"><i class="fas fa-school me-1" style="color:black"></i><span class="m-2" style="color:black">Salones</span></a></li>

            <li class="nav-item" style="margin-right:30px"><a href="@Url.Action("Edificios","Admin")" class="nav-link collapse"><i class="fas fa-building" style="color:black"></i><span class="m-2" style="color:black">Edificios</span></a></li>

            <li class="nav-item active" style="margin-right:30px"><a href="@Url.Action("Coordenadas","Admin")" class="nav-link collapse"><i class="fas fa-search-location me-1" style="color:black"></i><span class="m-2" style="color:black">Coordenadas</span></a></li>

        </ul>

    </aside><!-- End Sidebar-->

    <main id="main" class="main">

        @RenderBody()
<!---->
    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
    </footer><!-- End Footer -->



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Content/js/scripts.js")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)

    <script>
        document.querySelector("#header > div.d-flex.align-items-center.justify-content-between > i")
    </script>

</body>

@*<ul class="nav navbar-nav">



    </ul>*@
</html>
